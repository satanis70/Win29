<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/constraint_layout_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_card1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@color/gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_card2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="4dp"
            android:background="@color/gray"
            app:layout_constraintStart_toEndOf="@+id/iv_card1"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_card3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="4dp"
            android:background="@color/gray"
            app:layout_constraintStart_toEndOf="@+id/iv_card2"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_card4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="4dp"
            android:background="@color/gray"
            app:layout_constraintStart_toEndOf="@+id/iv_card3"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/iv_card5"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="8dp"
            android:background="@color/gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_card1" />


        <ImageView
            android:id="@+id/iv_card6"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:background="@color/gray"
            app:layout_constraintStart_toEndOf="@+id/iv_card5"
            app:layout_constraintTop_toBottomOf="@+id/iv_card2" />

        <ImageView
            android:id="@+id/iv_card7"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:background="@color/gray"
            app:layout_constraintStart_toEndOf="@+id/iv_card6"
            app:layout_constraintTop_toBottomOf="@+id/iv_card3" />

        <ImageView
            android:id="@+id/iv_card8"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:background="@color/gray"
            app:layout_constraintStart_toEndOf="@+id/iv_card7"
            app:layout_constraintTop_toBottomOf="@+id/iv_card4" />

        <ImageView
            android:id="@+id/iv_card9"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="8dp"
            android:background="@color/gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_card5" />

        <ImageView
            android:id="@+id/iv_card10"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:background="@color/gray"
            app:layout_constraintStart_toEndOf="@+id/iv_card9"
            app:layout_constraintTop_toBottomOf="@+id/iv_card6" />

        <ImageView
            android:id="@+id/iv_card11"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:background="@color/gray"
            app:layout_constraintStart_toEndOf="@+id/iv_card10"
            app:layout_constraintTop_toBottomOf="@+id/iv_card7" />

        <ImageView
            android:id="@+id/iv_card12"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:background="@color/gray"
            app:layout_constraintStart_toEndOf="@+id/iv_card11"
            app:layout_constraintTop_toBottomOf="@+id/iv_card8" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/button_again"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:visibility="invisible"
        android:text="@string/again"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

    <TextView
        android:id="@+id/textView_cong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ongratulations_you_won"
        android:textSize="28sp"
        android:gravity="center"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/stalinist_one"
        android:gravity="center"
        android:text="@string/app_name"
        android:textSize="54sp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>